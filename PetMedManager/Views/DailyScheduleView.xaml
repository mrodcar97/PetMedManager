<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PetMedManager.Views.DailyScheduleView">

    <ScrollView>
        <Grid x:Name="ScheduleGrid"
              Margin="5"
              Padding="5"
              RowSpacing="0"
              ColumnSpacing="0"
              WidthRequest="1700">
            
            <!-- Define the row and column definitions -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Time headers -->
                <!-- Dynamically add more rows for veterinarians -->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- Veterinarian names -->
                <ColumnDefinition Width="*"/>
                <!-- Time slots -->
            </Grid.ColumnDefinitions>
        </Grid>
    </ScrollView>
</ContentView>
