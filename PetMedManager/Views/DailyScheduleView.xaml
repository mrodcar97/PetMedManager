<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PetMedManager.Views.DailyScheduleView">
    <StackLayout Padding="10">
        <Label Text="Horario del Día" FontSize="24" HorizontalOptions="Center" Margin="0,0,0,10"/>
        <Grid x:Name="ScheduleGrid">
            <Grid.RowDefinitions>
                <!-- Define las filas para cada intervalo de media hora -->
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <!-- Añadir más RowDefinitions según sea necesario -->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Rellenar con horarios -->
            <Label Grid.Row="0" Grid.Column="0" Text="09:00 AM" VerticalOptions="Center"/>
            <BoxView Grid.Row="0" Grid.Column="1" BackgroundColor="LightGray" HeightRequest="50"/>

            <Label Grid.Row="1" Grid.Column="0" Text="09:30 AM" VerticalOptions="Center"/>
            <BoxView Grid.Row="1" Grid.Column="1" BackgroundColor="LightGray" HeightRequest="50"/>

            <!-- Añadir más horas aquí -->
        </Grid>
    </StackLayout>
</ContentView>

